rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 🏠 กฎสำหรับ collection reports 
    match /reports/{reportId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // 💬 Subcollection comments ภายใน reports เท่านั้น
      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
    
    // 📷 กฎสำหรับ camera reports - ระบบรายงานกล้องใหม่ (ปรับปรุงใหม่)
    match /camera_reports/{reportId} {
      allow read: if true;  // เปิดให้อ่านได้ทุกคน (ไม่ต้องล็อกอิน)
      allow create: if request.auth != null;
      allow update: if request.auth != null;  // เปิดให้อัปเดตได้ทั้งหมดสำหรับผู้ล็อกอิน
      allow delete: if request.auth != null && 
                     request.auth.uid == resource.data.reportedBy &&
                     resource.data.status == 'pending';
    }
    
    // 🗳️ กฎสำหรับ camera votes - โหวตสำหรับกล้อง (ปรับปรุงใหม่)
    match /camera_votes/{voteId} {
      allow read: if true;  // เปิดให้อ่านได้ทุกคน
      allow create: if request.auth != null;  // ผู้ล็อกอินสามารถสร้างโหวตได้
      allow update: if request.auth != null;  // เปิดให้อัปเดตได้สำหรับผู้ล็อกอิน
      allow delete: if request.auth != null;  // เปิดให้ลบได้สำหรับผู้ล็อกอิน
    }
    
    // 📈 กฎสำหรับ user report stats - สถิติการรายงาน
    match /user_report_stats/{userId} {
      allow read: if request.auth != null;  // ให้อ่านได้ทั้งหมด
      allow write: if request.auth != null;  // ให้เขียนได้สำหรับการอัปเดต stats
    }
    
    // 🎯 กฎสำหรับ speed cameras - กล้องจับความเร็วหลัก (อัปเดตใหม่)
    match /speed_cameras/{cameraId} {
      allow read: if true;  // เปิดให้อ่านได้ทุกคน
      allow create: if request.auth != null;  // ผู้ล็อกอินสามารถสร้างกล้องใหม่ได้ (จากระบบ auto-verification)
      allow update: if request.auth != null;  // อัปเดตได้สำหรับผู้ล็อกอิน
      allow delete: if request.auth != null;  // อนุญาตให้ลบได้สำหรับผู้ล็อกอิน (สำหรับระบบ auto-deletion)
    }
    
    // 📝 กฎสำหรับ camera deletion log - ประวัติการลบกล้อง
    match /camera_deletion_log/{logId} {
      allow read: if true;  // เปิดให้อ่านได้ทุกคน (สำหรับ debugging)
      allow create: if request.auth != null;  // ผู้ล็อกอินสามารถสร้าง log ได้
      allow update, delete: if false;  // ไม่อนุญาตให้แก้ไขหรือลบ log
    }
    
    // ❌ กฎสำหรับ camera deletion errors - ประวัติ errors การลบกล้อง
    match /camera_deletion_errors/{errorId} {
      allow read: if true;  // เปิดให้อ่านได้ทุกคน (สำหรับ debugging)
      allow create: if request.auth != null;  // ผู้ล็อกอินสามารถสร้าง error log ได้
      allow update, delete: if false;  // ไม่อนุญาตให้แก้ไขหรือลบ error log
    }
    
    // 👤 กฎสำหรับข้อมูลผู้ใช้ - เฉพาะเจ้าของ
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 📊 กฎสำหรับจำกัดการโพสต์ - เฉพาะเจ้าของ
    match /userLimits/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 📈 กฎสำหรับสถิติผู้ใช้ - เฉพาะเจ้าของ
    match /user_stats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 🔑 FCM Tokens - เฉพาะเจ้าของ
    match /user_tokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // � กฎสำหรับ speed limit changes - ประวัติการเปลี่ยนความเร็ว
    match /speed_limit_changes/{changeId} {
      allow read: if true;  // เปิดให้อ่านได้ทุกคน
      allow create: if request.auth != null;  // สร้างได้เฉพาะระบบ
      allow update, delete: if false;  // ไม่อนุญาตให้แก้ไขหรือลบ
    }
    
    // ❌ กฎสำหรับ speed update errors - ข้อผิดพลาดการอัปเดตความเร็ว
    match /speed_update_errors/{errorId} {
      allow read: if true;  // เปิดให้อ่านได้ทุกคน (สำหรับ debugging)
      allow create: if request.auth != null;  // สร้างได้เฉพาะระบบ
      allow update, delete: if false;  // ไม่อนุญาตให้แก้ไขหรือลบ
    }
    
    // �🔔 Notification Posts - อ่านได้ทุกคน สร้างได้เฉพาะ login
    match /notification_posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // 📊 Notification Stats - อ่านได้เฉพาะ login, เขียนไม่ได้
    match /notification_stats/{statId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false;
    }
  }
}

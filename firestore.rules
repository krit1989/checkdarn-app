rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // กฎสำหรับ collection reports
    match /reports/{reportId} {
      // อนุญาตให้อ่านได้ทุกคน
      allow read: if true;
      
      // อนุญาตให้เขียนได้สำหรับผู้ใช้ที่ล็อกอิน (รวม Anonymous และ Google)
      allow write: if request.auth != null && 
                      (request.auth.token.firebase.sign_in_provider == 'anonymous' ||
                       request.auth.token.firebase.sign_in_provider == 'google.com' ||
                       request.auth.token.email_verified == true);
    }
    
    // กฎสำหรับ collection userLimits (ใช้สำหรับตรวจสอบขีดจำกัดการโพสต์)
    match /userLimits/{userId} {
      // อนุญาตให้อ่าน/เขียนได้เฉพาะเจ้าของ
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // กฎสำหรับ collection comments
    match /comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      (request.auth.token.firebase.sign_in_provider == 'anonymous' ||
                       request.auth.token.firebase.sign_in_provider == 'google.com' ||
                       request.auth.token.email_verified == true);
    }
    
    // กฎสำหรับ collection users (ข้อมูลผู้ใช้)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

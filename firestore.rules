rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 🏠 กฎสำหรับ collection reports 
    match /reports/{reportId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // 💬 Subcollection comments ภายใน reports เท่านั้น
      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
    
    // 👤 กฎสำหรับข้อมูลผู้ใช้ - เฉพาะเจ้าของ
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 📊 กฎสำหรับจำกัดการโพสต์ - เฉพาะเจ้าของ
    match /userLimits/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 📈 กฎสำหรับสถิติผู้ใช้ - เฉพาะเจ้าของ
    match /user_stats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 🔑 FCM Tokens - เฉพาะเจ้าของ
    match /user_tokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 🔔 Notification Posts - อ่านได้ทุกคน สร้างได้เฉพาะ login
    match /notification_posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // 📊 Notification Stats - อ่านได้เฉพาะ login, เขียนไม่ได้
    match /notification_stats/{statId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false;
    }
  }
}
